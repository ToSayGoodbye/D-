/* pages/detail/detail.wxss */
@import "../template/starts.wxss";

.shoots{
  width:100%;
  justify-content:space-between;
}
.type{
  font-size:28rpx;
  text-align:center;
  color:#888;
  margin-top:-17rpx;
  padding:7rpx;
}
.shoot{
  padding:20rpx;
  border:1rpx solid rgba(230, 220, 220, 0.89);
  margin:20rpx;
  border-radius:20rpx;
}
.oilTitle{
  height: 300rpx;
  width: 600rpx;
  background-color: rgb(240, 246, 247);
  margin-bottom: 10rpx;
  border-radius:25rpx;
  padding:30rpx;
}
.sort-item{
    width:96rpx;
    height:58rpx;
    color: #545454;
    font-size:13px;
    text-align: center;
    padding-top:13px;
    font-weight:bold;
}
.sort-item.on{
    color: #db3652;
    border-bottom: 2px solid #db3652;
}

.sort-item.comb{
    /* display:flex; */
    flex-direction: row;
}
.shootOn{
  background-color:rgb(240, 246, 247);
}
.sort-panel{
    width:100%;
    height: 45px;
    display:flex;
    z-index: 1000;
    flex-direction: row;
    justify-content: space-around;
    border-bottom: 1px solid #e8e8e8;
    background-color: rgba(255, 255, 255, 0.96);
}
.title{
  font-size: 30rpx
}
.titleTop{
  display: flex;
  justify-content:space-between;
  align-items:center;
  padding-bottom: 30rpx 
} 
.stars{
  border-top:solid 1rpx;
  border-color: #fff
}
.titleDown{
  display: flex;
  justify-content:space-between;
  align-items:center;
  height: 150rpx;
}
.saveView{
  display: flex;
  justify-content:space-between;
  width:253rpx;
  font-size: 26rpx
}
.address{
  font-size:26rpx;
  margin-top:14rpx;
}
.container {
    width: 100%;                                                                          
    padding:0;
    margin: 0;
    background-color: #fff;
}