/**index.wxss**/
page{
  background: #efefef;
}
.select_box{
  background: #fff;
  width: 100%;
  position: relative;
  height:36px;
  box-shadow: 2px #666;
}
.select{
  box-sizing: border-box;
  width: 33%;
  height: 70rpx;
  /* border-right: 1px solid #aaa; */
  background: #fff;
  display: inline-block;
  align-items: center;
  padding: 0 20rpx;
  text-align:center;
  position: relative;
}
.select:not(:nth-of-type(5)):after{
    content:"";
    position:absolute;
    width:1px;
    height:70%;
    top:12%;
    right:0;
    background-color:#666;
    -webkit-transform:scaleX(0.5);
    transform:scaleX(0.5);
}

.select_box:last-child{
  border: none;
}
.select_text{
  font-size: 35rpx;
  flex: 1;
  color:#666;

}
.select_img{
  width: 30rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
  position: absolute;
  right: 20rpx;
  top:6rpx;
}


.option_box{
  position: absolute;
  top: 70rpx;
  width: 33%;
  border:1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  z-index: 99999;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
  text-align:center;

}
.option_box:nth-of-type(2){
  left: 0%;
}
.option_box:nth-of-type(4){
  left: 33%;
}
.option_box:nth-of-type(6){
  left: 66%;
}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}


