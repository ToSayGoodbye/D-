<!--pages/tixian/tixian.wxml-->
<view class="page">
  <view class="title">请输入加油金额(机显)</view>
  <view class="page-section inpu flex-row" style="display: flex;justify-content:space-between">
    <view class="flex-view-item">￥</view>
    <view class="weui-cells weui-cells_after-title flex-view-item">
          <input name="price" class="weui-input price"  bindinput="ifChange" type="digit" placeholder=""/>
    </view>
     <view class="flex-view-item num">
          约{{num}}L
    </view>
  </view>
  <view class="line"></view>
  <view class="txbtn">
    <button bindtap="tixian" type="primary">确认提现</button>
  </view>
</view>

